{
  "name": "ts-result",
  "private": true,
  "version": "0.1.0",
  "description": "An implementation of Rust's `Result` type in Typescript.",
  "license": "MIT",
  "repository": "https://github.com/ndinata/ts-result.git",
  "author": "Nico Dinata <nicodnt@icloud.com>",
  "scripts": {
    "ci:check": "prettier --check './**/*.ts' && yarn lint",
    "format": "prettier --write './**/*.ts'",
    "lint": "eslint . --ext .ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": ">=6.0.0",
    "@typescript-eslint/parser": ">=6.0.0",
    "eslint": ">=8.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^1.0.0",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "xo",
      "prettier"
    ],
    "overrides": [
      {
        "extends": [
          "xo-typescript",
          "prettier"
        ],
        "files": [
          "*.ts"
        ],
        "rules": {
          "@typescript-eslint/consistent-type-definitions": 0,
          "@typescript-eslint/no-namespace": 0
        }
      }
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    }
  }
}
